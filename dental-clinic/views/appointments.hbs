<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>App</title>
    <style>
        html, body {
            margin: 0;
            padding: 0 100px;
        }
        .text {
            color: darkcyan;
            font-family: "Days One", sans-serif;
            font-size: 24px;
        }
        .columns-container {
            display: flex;
            flex-direction: column;
            gap: 50px;
        }
        .customers-column {
            display: flex;
            flex-direction: column;
        }
    </style>
</head>
<body>
    <div class="columns-container">
        <div class="customers-column">
            <p>Customers:</p>
            <table>
            <tr>
                <td>Id</td>
                <td>Date</td>
                <td>Customer</td>
                <td>Doctor</td>
            </tr>
            {{#each appointments}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.customer.name}}</td>
                    <td>{{this.doctor.name}}</td>
                </tr>
            {{/each}}
            </table>
        </div>
        <div class="text">Create Appointment</div>
        <form id="appointmentCreateForm">
            <label for="date">Date:</label>
            <input type="text" id="date" name="date"><br><br>

            <label for="customerId">Customer id:</label>
            <input type="number" id="customerId" name="customerId"><br><br>

            <label for="doctorId">Doctor id:</label>
            <input type="text" id="doctorId" name="doctorId"><br><br>

            <button type="submit">Submit</button>
        </form>
        <div id="response"></div>

        <div class="text">Edit Appointment</div>
        <form id="appointmentEditForm">
            <label for="id">Id:</label>
            <input type="text" id="id" name="id"><br><br>

            <label for="date">Date:</label>
            <input type="text" id="date" name="date"><br><br>

            <label for="customer">Customer id:</label>
            <input type="number" id="customer" name="customer"><br><br>

            <label for="doctor">Doctor id:</label>
            <input type="text" id="doctor" name="doctor"><br><br>

            <button type="submit">Submit</button>
        </form>
        <div id="response2"></div>

        <div class="text">Delete Appointment</div>
        <form id="appointmentDeleteForm">
            <label for="id">Id:</label>
            <input type="text" id="id" name="id"><br><br>

            <button type="submit">Submit</button>
        </form>
        <div id="response3"></div>

        <a class="text" href="/api">Home</a>
    </div>

    <script>
        document.getElementById('appointmentCreateForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const formData = new FormData(this);

            try {
                const response = await fetch('/api/appointment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json;charset=utf-8'
                    },
                    body: JSON.stringify(
                      {
                        date: formData.get("date"),
                        customer: formData.get("customerId"),
                        doctor: formData.get("doctorId")
                      }
                    )
                });
                const data = await response;
                document.getElementById('response').innerText = data.status;
            } catch (error) {
                console.error('Error submitting form:', error);
            }
        });

        document.getElementById('appointmentEditForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const formData = new FormData(this);

            const sortedFormData = {};
            formData.entries().forEach(([key, value]) => {
                if (value!==undefined && value!=="" && value!==null && key!=="id") {
                    sortedFormData[key] = value;
                }
            });


            try {
                const response = await fetch(`/api/appointment/${formData.get("id")}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json;charset=utf-8'
                    },
                    body: JSON.stringify(sortedFormData)
                });
                const data = await response;
                document.getElementById('response2').innerText = data.status;
            } catch (error) {
                console.error('Error submitting form:', error);
            }
        });

        document.getElementById('appointmentDeleteForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const formData = new FormData(this);

            try {
                const response = await fetch(`/api/appointment/${formData.get("id")}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json;charset=utf-8'
                    },
                });
                const data = await response;
                document.getElementById('response3').innerText = data.status;
            } catch (error) {
                console.error('Error submitting form:', error);
            }
        });
    </script>
</body>
</html>
