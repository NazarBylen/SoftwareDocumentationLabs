<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>App</title>
    <style>
        html, body {
            margin: 0;
            padding: 0 100px;
        }
        .text {
            color: darkcyan;
            font-family: "Days One", sans-serif;
            font-size: 24px;
        }
        .columns-container {
            display: flex;
            flex-direction: column;
            gap: 50px;
        }
        .customers-column {
            display: flex;
            flex-direction: column;
        }
    </style>
</head>
<body>
    <div class="columns-container">
        <div class="customers-column">
            <p>Customers:</p>
            <table>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Age</td>
                <td>Number</td>
            </tr>
            {{#each customers}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.age}}</td>
                    <td>{{this.number}}</td>
                </tr>
            {{/each}}
            </table>
        </div>
        <div class="text">Create Customer</div>
        <form id="customerCreateForm">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name"><br><br>

            <label for="age">Age:</label>
            <input type="number" id="age" name="age"><br><br>

            <label for="number">Number:</label>
            <input type="text" id="number" name="number"><br><br>

            <button type="submit">Submit</button>
        </form>
        <div id="response"></div>

        <div class="text">Edit Customer</div>
        <form id="customerEditForm">
            <label for="id">Id:</label>
            <input type="text" id="id" name="id"><br><br>

            <label for="name">Name:</label>
            <input type="text" id="name" name="name"><br><br>

            <label for="age">Age:</label>
            <input type="number" id="age" name="age"><br><br>

            <label for="number">Number:</label>
            <input type="text" id="number" name="number"><br><br>

            <button type="submit">Submit</button>
        </form>
        <div id="response2"></div>

        <div class="text">Delete Customer</div>
        <form id="customerDeleteForm">
            <label for="id">Id:</label>
            <input type="text" id="id" name="id"><br><br>

            <button type="submit">Submit</button>
        </form>
        <div id="response3"></div>

        <a class="text" href="/api">Home</a>
    </div>

    <script>
        document.getElementById('customerCreateForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const formData = new FormData(this);

            try {
                const response = await fetch('/api/customer', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json;charset=utf-8'
                    },
                    body: JSON.stringify(
                      {
                        name: formData.get("name"),
                        age: formData.get("age"),
                        number: formData.get("number")
                      }
                    )
                });
                const data = await response;
                document.getElementById('response').innerText = data.status;
            } catch (error) {
                console.error('Error submitting form:', error);
            }
        });

        document.getElementById('customerEditForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const formData = new FormData(this);

            console.log(formData.getAll("name"));

            const sortedFormData = {};
            formData.entries().forEach(([key, value]) => {
                if (value!==undefined && value!=="" && value!==null && key!=="id") {
                    sortedFormData[key] = value;
                }
            });

            try {
                const response = await fetch(`/api/customer/${formData.get("id")}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json;charset=utf-8'
                    },
                    body: JSON.stringify(sortedFormData)
                });
                const data = await response;
                document.getElementById('response2').innerText = data.status;
            } catch (error) {
                console.error('Error submitting form:', error);
            }
        });

        document.getElementById('customerDeleteForm').addEventListener('submit', async function(event) {
            event.preventDefault();

            const formData = new FormData(this);

            try {
                const response = await fetch(`/api/customer/${formData.get("id")}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json;charset=utf-8'
                    },
                });
                const data = await response;
                document.getElementById('response3').innerText = data.status;
            } catch (error) {
                console.error('Error submitting form:', error);
            }
        });
    </script>
</body>
</html>
